{
  "extends": "airbnb",
  "rules": {
    "no-multiple-empty-lines": [1, {"max": 1, "maxEOF": 1}],
    "indent": [2, 4, {"SwitchCase": 1}],
    "react/jsx-indent-props": [2, 4],
    "react/jsx-closing-bracket-location": 0,
    "comma-dangle": [2, "never"],
    "arrow-body-style": [2, "always"],
    "react/sort-comp": [1, {
        "order": [
            "constructor",
            "lifecycle",
            "everything-else",
            "render"
        ]
    }],
    "react/jsx-no-bind": [0]
  }
}